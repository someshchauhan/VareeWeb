@model VareeWeb.Models.User

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/login-signup.css" rel="stylesheet" />


    <div class="login-page">


        <div class="main">



            <div class="login">


                @using (Html.BeginForm(FormMethod.Post))
                {
                    <label for="chk" aria-hidden="true">Sign Up</label>
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "User Name" })
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", Type = "password" })

                    <button>Sign Up</button>
                }

                <h4>@Html.ActionLink("Log In", "Index", "Login", new { id = "signUpLink" })</h4>

                <h4>@ViewBag.errorMsg</h4>

            </div>


        </div>
    </div>



