<div class="slogan">
    <h3>What makes your home <span>"Home"</span></h3>
    <h6>Watch your favourite stars unfiltered in their home</h6>
</div>

<div class="stars-vids">
    <div class="star-box"><video src="~/Content/videos/celebs/vineeta.mp4" loop="loop" autoplay muted></video><h6>Vineeta singh</h6></div>
    <div class="star-box"><video src="~/Content/videos/celebs/shwetambri.mp4" loop="loop" autoplay muted></video><h6>Shwetambari Shetty</h6></div>
    <div class="star-box"><video src="~/Content/videos/celebs/saloni.mp4" loop="loop" autoplay muted></video><h6>Saloni Kukreja</h6></div>
    <div class="star-box"><video src="~/Content/videos/celebs/rhea.mp4" loop="loop" autoplay muted></video><h6>Rhea Chakraborty</h6></div>

</div>

<div class="DealsOfDay">
    <div class="imgSec">
        <img src="~/Content/Images/deals.jpg" />
        <div id="dealEnds">Ends In:</div>
        <div class="timer" id="timer"><span id="hours"></span>:<span id="min"></span>:<span id="sec"></span></div>

    </div>
    @foreach (var product in Model)
    {

        <div class="Deals">
            <a href="@Url.Action("ProductDetails", "Home", new {id = product.ProductID})">
                <div class="Deals-top">
                    <img src="@product.ImageURL" />
                </div>
                <div class="Deals-bottom">
                    <p>@product.ProductName</p>
                    <div class="Deals-price">
                        <span id="deal-current-price"><strong>&#8377; @product.Price</strong></span>
                        <span><s>&#8377; @product.MRP</s></span>
                        <span id="deals-discount">@product.DiscountPercentage% Off</span>
                    </div>
                </div>
            </a>
            <div id="Deal-note">
                Deal of the Day
            </div>
            @using (Html.BeginForm("AddToWishlist", "Home", FormMethod.Post))
            {
                @Html.Hidden("productId", product.ProductID) 
                <button type="submit" id="add-wish">
                    <i id="heartIcon" class="fa-regular fa-heart"></i>
                </button>
            }
        </div>

    }

</div>

