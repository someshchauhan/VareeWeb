    <script>
        $(document).ready(function () {
            $('#dynamicSearchBox').on('input', function () {
                const query = $(this).val();

                if (query.trim() === "") {
                    $('#search-results-container').html('');
                    $('#search-results-container').css('display', 'none');
                    return;
                }

                $.ajax({
                    url: '/Home/SearchProducts',
                    type: 'GET',
                    data: { query: query },
                    success: function (data) {
                        $('#search-results-container').html(data);
                        $('#search-results-container').css('display', 'flex');
                    },
                    error: function () {
                        $('#search-results-container').html('<p>Error fetching data.</p>');
                        $('#search-results-container').css('display', 'flex');
                    }
                });
            });
        });



